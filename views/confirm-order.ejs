        <script>


            const hamburger = document.querySelector('.nav-hamburger');
            const navList = document.querySelector('.nav-list-container');

            hamburger.addEventListener('click', () => {
                navList.classList.toggle('active');
            })

            const user = document.querySelector('.user-profile-nav');

            user.addEventListener('mouseover', () => {
                document.querySelector('.main-user-profile-nav').classList.add('active');
            })
            user.addEventListener('mouseout', () => {
                document.querySelector('.main-user-profile-nav').classList.remove('active');
            })


            const userProfile = document.querySelector('.user-profile');
            function homePageUser() {
                let checkForToken = document.cookie.split(';');
                let token = checkForToken.find(item => {
                    if (item.includes('token')) {
                        return true;
                    }
                })
                if (token) {
                    userProfile.style.display = 'block';
                    fetch('/homeUser', {
                        method: 'get',
                        headers: {
                            "Content-Type": "application/json"
                        },
                    })
                        .then((res) => res.json())
                        .then((data) => {
                            const adminOnly = document.querySelector('.admin-only');
                            const userProfileImg = document.querySelector('.user-profile-img img');

                            userProfileImg.src = data.user.picture;
                            if (data.user.role === 'user') {
                                adminOnly.style.display = 'none';
                            }
                            if (data.user.role === 'admin') {
                                adminOnly.style.display = 'block';
                            }
                        })
                } else {
                    userProfile.style.display = 'none';
                }
            }
            homePageUser();

            // Displaying User Data for order confirmation

            let cookieData = document.cookie;
            let cookieArr = cookieData.split(';');

            let cartDetailArr = cookieArr.filter(item => {
                if (item.includes('cartDetail')) {
                    return item;
                }
            })


            let cartArr = cartDetailArr.map(item => {
                let result = item.split('=')[1];
                return result.split('},');
            })


            cartArr.forEach(item => {

                let productData = item.filter(kk => {
                    if (kk.includes("{")) {
                        return item;
                    }
                })

                let finalObj = productData.map(item => {
                    let totalProduct = JSON.parse(`${item}}`);
                    return `
                            <div class="cart-item-detail">
                                    <div class="cart-img">
                                        <img src="${totalProduct.image}" alt="" >
                                    </div>
                                    <p class="cart-item-name">
                                        ${totalProduct.name}
                                    </p>
                                    <div class="cart-item-qty-n-total">
                                        <p>${totalProduct.qty}</p>
                                        <span>X</span>
                                        <p>$${totalProduct.price}</p>
                                        <span>=</span>
                                        <p class="total-item-price">$${totalProduct.totalAmount}</p>
                                    </div>
                            </div>
                        `
                })
                let cartItemList = document.querySelector('.cart-items-list');
                cartItemList.innerHTML = finalObj.toString().replaceAll(',', '');

                let subTotalAmount = item.filter(kk => {
                    if (!kk.includes("{")) {
                        return item;
                    }
                })
                let subTotal = subTotalAmount.map(item => {
                    return item;
                }).toString();

                const subTotalDOM = document.querySelector('.subtotal p span');
                subTotalDOM.textContent = subTotal;
            })


            let userDetailArr = cookieArr.filter(item => {
                if (item.includes('userDetail')) {
                    return item;
                }
            })

            let userArr = userDetailArr.map(item => {
                let result = item.split('=')[1];
                return result;
            }).toString();

            let userObj = JSON.parse(`${userArr}`);
            let name = '<%-name%>';
            let userDetailDisplay = `
                                <p>Name: <span>${name}</span></p>
                                <p>Phone: <span>${userObj.phone}</span></p>
                                <p>Address: <span>${userObj.address}, ${userObj.city}, ${userObj.state}, ${userObj.country}</span></p>
            `;

            let shipToDetail = document.querySelector('.ship-to-detail');
            shipToDetail.innerHTML = userDetailDisplay;


            // Confirm Order Total Amount
            const subTotalAmount = Number(document.querySelector('.subtotal p span').textContent);
            const shippingAmount = Number(document.querySelector('.shipping-charges p span').textContent);
            const gstAmount = Number(document.querySelector('.gst-tax p span').textContent);
            const totalAmount = document.querySelector('.total p span');

            totalAmount.textContent = subTotalAmount + shippingAmount + gstAmount;

            // Sending Cookies to confirm payment page
            const proceedToPaymentBtn = document.querySelector('.proceed-to-payment-btn button');
            let currentPageCookies = document.cookie;
            let cookieArrData = currentPageCookies.split(';');
            let filterCookie = cookieArrData.filter(item => {
                if (!item.includes('token')) {
                    return item;
                }
            });

            // For Cart Items
            let indexOfEqualTo = filterCookie.filter(item => {
                if (item.includes('cartDetail')) {
                    return item;
                }
            }).map(item => {
                let index = item.indexOf('=');
                return item.slice(index + 1, item.length);
            }).toString();


            // For UserDetail
            let indexOfEqualToUser = filterCookie.filter(item => {
                if (item.includes('userDetail')) {
                    return item;
                }
            }).map(item => {
                let index = item.indexOf('=');
                return item.slice(index + 1, item.length);
            }).toString();


            console.log(indexOfEqualToUser);
            console.log(indexOfEqualTo);

            let confirmPaymentCookie = `{"subTotal":"${subTotalAmount}", "shippingCharges":"${shippingAmount}","gstTax":"${gstAmount}","grossTotal":"${Number(totalAmount.textContent)}"}`

            proceedToPaymentBtn.addEventListener('click', () => {
                document.cookie = `cartCookies=${indexOfEqualTo}; expires=Wed, 31 Oct 2024 08:50:17 GMT; path=/process/payment`;
                document.cookie = `userCookies=${indexOfEqualToUser}; expires=Wed, 31 Oct 2024 08:50:17 GMT; path=/process/payment`;
                document.cookie = `orderCookies=${confirmPaymentCookie}; expires=Wed, 31 Oct 2024 08:50:17 GMT; path=/process/payment`;
                window.location = '/process/payment';
            })
        </script>
