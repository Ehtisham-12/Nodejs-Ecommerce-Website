                        <input type="text" name="city" placeholder="City" id="city">
                        <input type="number" name="postalCode" placeholder="Postal Code" id="postal-code">
                        <input type="number" name="phone" placeholder="Phone" id="phone-no">
                        <select name="country" id="all-countries" onchange="getState(value)">
                            <option value="" selected="selected">Country</option>
                        </select>
                        <select name="state" id="country-states">
                            <option value="">State</option>
                        </select>
