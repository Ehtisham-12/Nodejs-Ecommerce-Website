        <script>

            fetch('https://raw.githubusercontent.com/dr5hn/countries-states-cities-database/master/countries%2Bstates.json')
                .then(res => res.json())
                .then(result => {
                    let rest = result.map(item => {
                        return `
                    <option value="${item.name}" >${item.name}</option>
                    `
                    })
                    let data = rest.toString().replaceAll(',', '');
                    let countryDOM = document.querySelector('#all-countries');
                    countryDOM.innerHTML = `<option value="" selected="selected">Select Country</option>${data}`;
                })

            function getState(country) {
                fetch('https://raw.githubusercontent.com/dr5hn/countries-states-cities-database/master/countries%2Bstates.json')
                    .then(res => res.json())
                    .then(result => {
                        let output = result.filter(item => {
                            return item.name === country;
                        })
                        let allState = output[0].states;

                        let states = allState.map(item => {
                            return `
                        <option value="${item.name}">${item.name}</option>
                        `
                        })
                        let stateDOM = document.querySelector('#country-states');
                        stateDOM.style.display = 'block';
                        stateDOM.innerHTML = `<option value="" selected="selected">Select State</option> ${states.toString().replaceAll(',', ' ')}`;
                    })
            }


            const hamburger = document.querySelector('.nav-hamburger');
            const navList = document.querySelector('.nav-list-container');

            hamburger.addEventListener('click', () => {
                navList.classList.toggle('active');
            })

            const user = document.querySelector('.user-profile-nav');

            user.addEventListener('mouseover', () => {
                document.querySelector('.main-user-profile-nav').classList.add('active');
            })
            user.addEventListener('mouseout', () => {
                document.querySelector('.main-user-profile-nav').classList.remove('active');
            })


            const userProfile = document.querySelector('.user-profile');
            function homePageUser() {
                let checkForToken = document.cookie.split(';');
                let token = checkForToken.find(item => {
                    if (item.includes('token')) {
                        return true;
                    }
                })
                if (token) {
                    userProfile.style.display = 'block';
                    fetch('/homeUser', {
                        method: 'get',
                        headers: {
                            "Content-Type": "application/json"
                        },
                    })
                        .then((res) => res.json())
                        .then((data) => {
                            const adminOnly = document.querySelector('.admin-only');
                            const userProfileImg = document.querySelector('.user-profile-img img');

                            userProfileImg.src = data.user.picture;
                            if (data.user.role === 'user') {
                                adminOnly.style.display = 'none';
                            }
                            if (data.user.role === 'admin') {
                                adminOnly.style.display = 'block';
                            }
                        })
                } else {
                    userProfile.style.display = 'none';
                }
            }
            homePageUser();

            // Sending cookies to confirm order page
            const shippingConfirmBtn = document.querySelector('.shipping-confirm-btn');

            shippingConfirmBtn.addEventListener('click', (e)=>{
                e.preventDefault();
                const address = document.querySelector('#address').value;
                const city = document.querySelector('#city').value;
                const postalCode = document.querySelector('#postal-code').value;
                const phone = document.querySelector('#phone-no').value;
                const country = document.querySelector('#all-countries').value;
                const state = document.querySelector('#country-states').value;
                
                const userDetail = `{"address":"${address}", "city":"${city}", "postal":"${postalCode}","phone":"${phone}", "country":"${country}","state":"${state}"}`;
                document.cookie = `userDetail=${userDetail}; expires=Wed, 31 Oct 2024 08:50:17 GMT; path=/order/confirm`;
                window.location = '/order/confirm';     
            })

        </script>
    </body>
