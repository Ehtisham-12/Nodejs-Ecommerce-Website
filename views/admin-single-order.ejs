<%- include('includes/head') %>

<body>

    <body>
        <div class="container">
            <!-- Nav Bar -->
            <div class="nav-container">

                <div class="nav-hamburger">
                    <div></div>
                    <div></div>
                    <div></div>
                </div>

                <nav class="nav-list-container">

                    <h2>Ecommerce</h2>

                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="">Products</a></li>
                        <li><a href="">Contacts</a></li>
                        <li><a href="">About</a></li>
                    </ul>

                    <div class="other-menu">

                        <div class="search-bar">
                            <a href=""><i class="fa-solid fa-magnifying-glass fa-2x"></i></a>
                        </div>

                        <div class="cart-item">
                            <a href=""><i class="fa-solid fa-cart-shopping fa-2x"></i></a>
                        </div>

                        <div class="user-bar">
                            <a href="/login"><i class="fa-solid fa-user fa-2x"></i></a>
                        </div>

                    </div>

                </nav>

            </div>

            <!-- Profile -->
            <div class="user-profile">
                <div class="main-user-profile-nav">
                    <div class="user-profile-nav">

                        <div class="user-profile-img">
                            <img src=" <%= image %>" alt="">
                        </div>

                        <div class="user-profile-nav-list">

                            <div class="nav-hover-wrapper">
                                <span>Dashboard</span>
                                <div class="dashboard-nav">
                                    <a href="/admin/dashboard"><i class="fa-brands fa-discord"></i></a>
                                </div>
                            </div>

                            <div class="nav-hover-wrapper">
                                <span>Orders</span>
                                <div class="order-nav">
                                    <a href=""><i class="fa-sharp fa-solid fa-bag-shopping"></i></a>
                                </div>
                            </div>

                            <div class="nav-hover-wrapper">
                                <span>Profile</span>
                                <div class="profile-nav">
                                    <a href=""><i class="fa-solid fa-user"></i></a>
                                </div>
                            </div>

                            <div class="nav-hover-wrapper">
                                <span>Cart</span>
                                <div class="cart-nav">
                                    <a href=""><i class="fa-solid fa-cart-shopping"></i></a>
                                </div>
                            </div>

                            <div class="nav-hover-wrapper">
                                <span>Logout</span>
                                <div class="logout-nav">
                                    <a href="/logout"><i class="fa-solid fa-right-from-bracket"></i></a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Dashboard -->
        <div class="dashboard-container">

            <div class="dashboard-nav-section">
                <h2>Ecommerce</h2>
                <nav>
                    <ul>
                        <a href="/admin/dashboard"><span><i class="fa-brands fa-discord"></i></span>
                            <li>Dashboard</li>
                        </a>
                        <a href="" class="products"><span><i class="fa-brands fa-slack"></i></span>
                            <li>Products</li>
                        </a>
                        <a href="/admin/all-products" class="products-child products-dashboard"><span><i
                                    class="fa-solid fa-border-all"></i></span>
                            <li>All</li>
                        </a>
                        <a href="/admin/create" class="products-child">
                            <li>+ Create</li>
                        </a>
                        <a href="/admin/all-orders" class="orders-dashboard"><span><i
                                    class="fa-sharp fa-solid fa-bag-shopping"></i></span>
                            <li>Orders</li>
                        </a>
                        <a href="/admin/users" class="users-dashboard"><span><i class="fa-solid fa-user"></i></span>
                            <li>Users</li>
                        </a>
                        <a href="/admin/all-reviews"><span><i class="fa-solid fa-star"></i></span>
                            <li>Reviews</li>
                        </a>
                    </ul>
                </nav>
            </div>

            <!-- Process Order -->
            <div class="process-order-section">

                <div class="process-order-shipping-info">
                    <h2>Shipping Info</h2>
                    <div class="process-order-name">
                        <p>Name:</p>
                        <p>
                            <%=name %>
                        </p>
                    </div>
                </div>

                <div class="process-order-payment-info">
                    <h2>Payment</h2>
                    <div class="process-order-payment">
                        <p class="payment-status">Paid</p>
                    </div>
                    <div class="process-order-payment">
                        <p>Amount:</p>
                        <p>
                            $<%= order.grossTotal %>
                        </p>
                    </div>
                </div>

                <div class="process-order-status-info">
                    <h2>Order Status</h2>
                    <div class="process-order-status">
                        <p><%=order.orderStatus%></p>
                    </div>
                </div>

                <div class="process-order-cart-items">
                    <h2>Your Cart Items</h2>
                    <div class="process-order-cart-items-list">
                        <% order.orderItems.forEach(item=> { %>
                            <div class="process-order-cart">
                                <div class="process-order-cart-img" style="padding-left:0">
                                    <img src="<%=item.image %>" alt="" width="100px">
                                </div>
                                <p>
                                    <%=item.name %>
                                </p>
                                <div class="process-order-cart-calculation" style="padding-left:0">
                                    <span>
                                        <%=item.qty %>
                                    </span>
                                    <span>X</span>
                                    <span>
                                        <%=item.price %>
                                    </span>
                                    <span>=</span>
                                    <span>$</span>
                                    <span>
                                        <%=item.totalAmount %>
                                    </span>
                                </div>
                            </div>

                            <% }) %>

                    </div>
                </div>
            </div>

            <!-- Process Order Options Section  -->
            <div class="process-order-options">
                <h2>Process Order</h2>
                <form action="">
                    <select id="order-status-value">
                        <option value="" selected="selected">Choose Category</option>
                       
                    </select>
                    <button class="order-status-update-btn">Process</button>
                </form>
            </div>

        </div>

        <script>
            const hamburger = document.querySelector('.nav-hamburger');
            const navList = document.querySelector('.nav-list-container');

            hamburger.addEventListener('click', () => {
                navList.classList.toggle('active');
            })

            const user = document.querySelector('.user-profile-nav');

            user.addEventListener('mouseover', () => {
                document.querySelector('.main-user-profile-nav').classList.add('active');
            })
            user.addEventListener('mouseout', () => {
                document.querySelector('.main-user-profile-nav').classList.remove('active');
            })

            // Products Child toggle
            const productsChild = document.querySelectorAll('.products-child');
            const products = document.querySelector('.products');

            products.addEventListener('click', (e) => {
                e.preventDefault();
                productsChild.forEach(item => {
                    item.classList.toggle('active');
                })
            })

            
            // Showing the relevent option to admin for order status controll
            const orderStatusText = document.querySelector('.process-order-status p').textContent;
            const orderStatusValue = document.getElementById('order-status-value');

            function showReleventOption() {
                if(orderStatusText === 'processing') {
                    let ele = document.createElement("option");
                    ele.setAttribute('value', 'Shipped');
                    ele.textContent = 'Shipped';
                    
                    orderStatusValue.appendChild(ele);
                }
    
                if(orderStatusText === 'Shipped') {
                    let ele = document.createElement("option");
                    ele.setAttribute('value', 'Delivered');
                    ele.textContent = 'Delivered';
                    
                    orderStatusValue.appendChild(ele);
                }

                if(orderStatusText != "Shipped" && orderStatusText != 'processing') {
                    document.querySelector('.process-order-options').style.display = 'none';
                    document.querySelector('.process-order-section').style.width = '75%';
                }
            }

            showReleventOption();

            // Update Order Status
            const orderStatusUpdateBtn = document.querySelector('.order-status-update-btn');

            orderStatusUpdateBtn.addEventListener('click', (e) => {
                e.preventDefault();
                const orderStatusValue = document.getElementById('order-status-value').value;

                fetch('/admin/order/<%-order._id%>', {
                    method: "PUT",
                    headers: {
                        "Content-Type": "application/json",
                    },
                    body: JSON.stringify({
                        orderStatus: orderStatusValue
                    })
                })
                    .then((res) => res.json())
                    .then((result) => {
                        window.location = '/admin/order/<%-order._id%>'
                    })
            })

        </script>
    </body>
</body>

</html>